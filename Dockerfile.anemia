# Dockerfile.anemia - Servicio de Detecci√≥n de Anemia con ONNX Runtime
# Imagen base optimizada python:3.11-slim

FROM python:3.11-slim

# Metadata
LABEL maintainer="Evaluacion Nutricional"
LABEL description="Anemia Detection Service using ONNX Model from Hugging Face"

# Configuraci√≥n de variables de entorno
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PIP_NO_CACHE_DIR=1

# Crear directorio de trabajo
WORKDIR /app

# Instalar dependencias del sistema (solo lo esencial para OpenCV)
RUN apt-get update && apt-get install -y --no-install-recommends \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copiar requirements.txt e instalar dependencias Python
COPY anemia-service/requirements.txt .
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Crear directorios necesarios
RUN mkdir -p /app/models && \
    mkdir -p /app/logs

# Descargar el modelo ONNX desde Hugging Face durante el build
# Esto evita descargas repetidas en cada contenedor
RUN python -c "\
from huggingface_hub import snapshot_download; \
import os; \
print('üì• Descargando modelo de Hugging Face...'); \
snapshot_download(\
    repo_id='mprasca/anemia_model', \
    repo_type='model', \
    cache_dir='/app/models', \
    local_dir='/app/models/anemia_model'\
); \
print('‚úÖ Modelo descargado exitosamente')" || echo "‚ö†Ô∏è  Modelo ser√° descargado al inicio"

# Copiar c√≥digo del servicio
COPY anemia-service/main.py /app/main.py

# Exponer puerto
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Comando de inicio
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
